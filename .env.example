# Server Configuration
NODE_ENV=development
PORT=4000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tablemaster?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Credentials (for initial admin user creation)
ADMIN_EMAIL=admin@tablemaster.com
ADMIN_PASSWORD=admin123

# Email Service (SMTP - Legacy)
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Brevo Email Service (Transactional Emails)
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_SENDER=your-email@example.com
BREVO_TEMPLATE_PASSWORD_RESET=1
BREVO_TEMPLATE_PENDING=2
BREVO_TEMPLATE_CONFIRMATION=3
BREVO_TEMPLATE_DIRECT=4
BREVO_TEMPLATE_CANCELLATION=5

# Redis (for email quota tracking)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Google Cloud Storage
GCS_PROJECT_ID=your-gcs-project-id
GCS_BUCKET_NAME=tablemaster-files

# Option 1 (RECOMMENDED for production): Use credentials as JSON string
# Copy the content of your gcs-service-account.json file and minify it to a single line
# Example: GCS_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"..."}
GCS_CREDENTIALS=

# Option 2 (for local development only): Use key file path
# GCS_KEY_FILENAME=gcs-service-account.json

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:notifications@tablemaster.fr
PUSH_ENABLED=true
